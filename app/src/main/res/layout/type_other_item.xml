<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="0.5dp"
    app:cardElevation="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lighterGray"
        >

        <ImageView
            android:id="@id/iv_other_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_other_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_other_image"
            android:ellipsize="marquee"
            android:focusable="true"
            android:gravity="center"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/cardViewWhite"
            android:textSize="16sp"
            />


        <ImageView
            android:id="@+id/iv_other_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_play_circle_filled_green_24dp"
            />

        <ImageView
            android:id="@+id/btn_other_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_more_vert_teal_24dp"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>
