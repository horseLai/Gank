<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0.5dp"
    app:cardElevation="1dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginTop="30dp"
    >


    <RelativeLayout
        android:background="@drawable/list_item_bg_tint_selector"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        >


        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/tv_header_desc"
            style="@style/CommHomeHeadersTextStyle"
            android:drawablePadding="3dp"
            android:textColor="@color/lightTeal"
            />

        <TextView
            android:id="@+id/tv_header_more"
            style="@style/CommHomeHeadersTextStyle"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_more_teal"
            android:textColor="@color/lighterTeal"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>